<h1>Comments</h1>
<hr>
<% @comments.each do |comment| %>
<div class="well well-sm"><p><%= comment.topic %> </p></div>
<div class="well well-md"><p> <%= comment.body %></p></div>
	<%= link_to "View", comment_path(comment) %>
<% end %>
<br>
<br>
<% if current_user %>
	<%= link_to "Add comment", new_comment_path %>
<br>
<% end %>